<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/green_middle</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/DarkCyan</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:navigationBarColor">@color/green_middle</item>
        <item name="android:windowBackground">@color/WhiteSmoke</item>
        <item name="android:popupBackground">@color/WhiteSmoke</item>
        <item name="android:textColorLink">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/material_deep_teal_500</item>
        <item name="colorControlHighlight">@color/material_deep_teal_500</item>
        <item name="toolbarElevationSize">4dp</item>
        <item name="toolbarShadowDrawable">@drawable/shadow_light</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="colorOverlay">@color/WhiteSmoke</item>
    </style>

</resources>
